<br>
<h1>Friends List</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="table">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @friends.each do |friend| %>
    <%if friend.user == current_user%>
    <tr>
      <td> <%= link_to friend.first_name + ' ' + friend.last_name, friend%> </td>
      <td> <%= friend.email %> </td>
      <td> <%= friend.phone %> </td>
      <td> <%= friend.twitter %> </td>
      <td> <%= button_to 'Delete', friend, method: :delete,form: { data: { turbo_confirm: "Are you sure?" } }, class:"btn btn-outline-danger  btn-sm"%></td>
    </tr>
    <%end%>
    <%end%>
  </tbody>
</table>
<br>
<br>
<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary  btn-lg"%>