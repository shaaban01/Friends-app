<br>
<div class="bg-light border rounded-3 p-5">
  <div class="jumbotron ">
    <h1 class="display-4">
      <%= @friend.first_name%>
      <%= @friend.last_name%>
    </h1>
    <p class="lead">
      <%= @friend.email%> |
      <%= @friend.phone%> |
      <%= @friend.twitter%> 
    </p>

    <hr>
    <br>
    <div  class="btn-group" role="group">
      <%= link_to "Edit this friend", edit_friend_path(@friend) , class:"btn btn-outline-secondary"%>
      <%= link_to "Back to friends", friends_path , class:"btn btn-outline-secondary"%>
      <%= button_to "Destroy this friend", @friend, method: :delete , class:"btn btn-outline-secondary"%>
    </div> 
  </div>
</div>

